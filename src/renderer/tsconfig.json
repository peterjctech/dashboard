{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "paths": {
            "@assets": ["./assets"],
            "@components": ["./components"],
            "@common": ["./common"],
            "@views": ["./views"],
            "@helpers": ["./helpers"],
            "@types": ["./types"],
            "@store": ["./store"]
        }
    },
    "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.tsx", "./**/*.vue"]
}
